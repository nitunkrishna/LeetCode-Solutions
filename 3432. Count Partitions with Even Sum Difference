class Solution
{
public:
    int countPartitions(vector<int>& nums)
    {
        int s1=0, s2=0, cnt=0;
        int n=nums.size();
        for(int i=0; i<n; i++)
            s2+=nums[i];
        for(int j=0; j<n-1; j++)
        {
            s1+=nums[j];
            s2-=nums[j];
            if((s1-s2)%2==0) cnt++;
        }
        return cnt;
    }
};
